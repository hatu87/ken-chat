<div class="container">
  <div class="row">
    <div class="col s3">
      <ul class="">
        <li>
          <div class="fixed-action-btn" style="bottom: 16px; right: 16px;">
            <%= link_to new_user_message_path(current_user_id), class:'btn-floating btn-large red modal-trigger', remote:true do %>
            <i class="large material-icons">mode_edit</i>
            <% end %>
          </div>
        </li>
        <li><%= link_to 'Add Friends', user_friends_path %></li>
        <li><%= link_to 'Sent Messages', sent_user_messages_path %></li>
      </ul>

    </div>
    <div class="col s9">
      <div class="row">
        <ul class="collapsible popout" data-collapsible="accordion">
          <% @messages.each do |msg| %>
          <li id="msg-<%=msg.id%>" class="<%= unread_style(msg) %>">
            <%= link_to user_message_path(current_user_id, msg.id, format: :js), class:'collapsible-header', remote:true do %>
            <%= image_tag msg.sender.avatar_url || 'http://placehold.it/100x100', class:'circle msg-avatar' %>
            <span class="msg-title"><%= msg.sender.name %></span>
            <div href="#!" class="right"><%= msg.created_at.to_formatted_s(:short) %></div>
            <% end %>
            <% if msg.unread?(current_user_id) %>
            <div class="collapsible-body"><p id="content-<%= msg.id%>"></p></div>
            <% else %>
            <div class="collapsible-body"><p>You have already read this message</p></div>
            <% end %>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

<!-- Modal Structure -->
<div id="modal1" class="modal modal-fixed-footer">
  <%= form_for Message.new, url: user_messages_path, method: :post, remote:true do |f| %>
    <div class="modal-content">
      <h4>New Message</h4>
      <div class="row">
        <div class='col s12'>
          <div class="row">
            <div class="input-field col s12">
              <%= f.text_field :emails_string, id:'emails',  'data-role': 'materialtags' %>
              <label for="textarea1">Recipients</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <%= f.text_area :content, class:'materialize-textarea'%>
              <label for="textarea1">Message</label>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <%= f.submit 'Send', class:'btn'%>
      <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat ">Cancel</a>
    </div>
  <% end %>
</div>

<script type="text/javascript">
  localStorage.removeItem('lastReadMsg');
</script>

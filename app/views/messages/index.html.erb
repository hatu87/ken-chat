<div class="container">
  <div class="row">
    <div class="col s3">
      <ul class="">
        <li>
          <div class="fixed-action-btn" style="bottom: 16px; right: 16px;">
            <%= link_to "#modal1", class:'btn-floating btn-large red modal-trigger' do %>
            <i class="large material-icons">mode_edit</i>
            <% end %>
          </div>
        </li>
        <li><%= link_to 'Add Friends', user_friends_path %></li>
        <li><%= link_to 'Sent Messages', sent_user_messages_path %></li>
      </ul>
      <a href="#" data-activates="slide-out" class="button-collapse"><i class="mdi-navigation-menu"></i></a>
    </div>
    <div class="col s9">
      <div class="row">
        <ul class="collapsible popout" data-collapsible="accordion">
          <% @messages.each do |msg| %>
          <li id="msg-<%=msg.id%>" class="<%= unread_style(msg) %>">
            <%= link_to user_message_path(current_user_id, msg.id), class:'collapsible-header', remote:true do %>
            <%= image_tag msg.sender.avatar_url || 'http://placehold.it/100x100', class:'circle msg-avatar' %>
            <span class="msg-title"><%= msg.sender.name %></span>
            <div href="#!" class="right"><%= msg.created_at.to_formatted_s(:short) %></div>
            <% end %>
            <% if msg.unread? %>
            <div class="collapsible-body"><p><%= msg.content %></p></div>
            <% else %>
            <div class="collapsible-body"><p>You have already read this message</p></div>
            <% end %>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
<!-- Modal Structure -->

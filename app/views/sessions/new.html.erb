<div class="container">
  <div class="row">
    <%= form_tag sessions_path, method: :post, class: 'col s12' do %>
    <div class="card">
      <div class="card-content">
        <h4 class="activator grey-text text-darken-4">Login</h4>
        <p>Welcome to our application</p>
        <% if flash[:error] %>
          <%= flash[:error] %>
        <% end %>
      </div>
      <div class="card-content ">
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">email</i>
            <%= email_field_tag :email, nil, class: 'validate' %>
            <%= label_tag :email%>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">lock_open</i>
            <%= password_field_tag :password, nil, class:'validate' %>
            <%= label_tag :password %>
          </div>
        </div>

      </div>
      <div class="card-action">
        <%= submit_tag 'Login', class: 'waves-effect waves-light btn'%>
        <%= link_to 'Register', new_user_path, class:'grey waves-effect waves-light btn' %>
      </div>
    </div>
    <% end %>
  </div>
</div>
